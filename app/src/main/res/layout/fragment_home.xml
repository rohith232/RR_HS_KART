<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".fragment.HomeFragment">

    <!-- Menu TextView -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/menuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Products in HS Cart ðŸŽ‰ðŸŽ‰"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/section_title"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/shopp"
            android:contentDescription="Menu Icon"/>
    </RelativeLayout>

    <!-- Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="0.5dp"
        android:layout_marginBottom="16dp">
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Banner with ViewPager2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="0.5dp"
                android:layout_marginBottom="24dp">

                <!-- ViewPager2 should match the size of the MaterialCardView -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/sliderViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="0dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/section_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Shop by category"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/seeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryDark"
                    android:textSize="14sp"
                    android:text="See All"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawableTint="@color/primaryDark"
                    android:drawablePadding="4dp"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoryRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/layout_category_item"/>

            <!-- Products Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/section_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Suggested Products"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/seeall1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryDark"
                    android:textSize="14sp"
                    android:text="See All"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawableTint="@color/primaryDark1"
                    android:drawablePadding="4dp"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/layout_product_item"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
